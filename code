using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Windows.Forms;
using Snake;
using Menu;

namespace Snake
{
    public partial class QuizInterface : Form
    {
        //Orgainised List of class to store all the questions, options and answers
        List<quizQuestions> quesList = new List<quizQuestions>();

        //This will store the random series of array of number list (0-Max. No.of ques)
        int[] values;

        public QuizInterface()
        {
            InitializeComponent();
            
            //Initialize the components on the page
            reloadQuiz();
        }

        void reloadQuiz()
        {
            //Load the questions, answer, options into organised list object
            loadQuestions();

            //Read the questions from list and set the values of random questions on the page
            fillQuestionsOnForm();

            //Reset all the Radio Buttons/Option Buttons on the page to false.
            rdbQ1Opt1.Checked = false;
            rdbQ1Opt2.Checked = false;
            rdbQ1Opt3.Checked = false;
            rdbQ1Opt4.Checked = false;

            rdbQ2Opt1.Checked = false;
            rdbQ2Opt2.Checked = false;
            rdbQ2Opt3.Checked = false;
            rdbQ2Opt4.Checked = false;

            rdbQ3Opt1.Checked = false;
            rdbQ3Opt2.Checked = false;
            rdbQ3Opt3.Checked = false;
            rdbQ3Opt4.Checked = false;
        }

        private void btnSubmit_Click(object sender, EventArgs e)
        {
            //Temporary variables to store the options selected by user
            string ans1, ans2, ans3;

            //Validation check if the user has selected any one of the options or not for Ques 1.
            if (!(rdbQ1Opt1.Checked || rdbQ1Opt2.Checked || rdbQ1Opt3.Checked || rdbQ1Opt4.Checked))
            {
                MessageBox.Show("Please select answer for Question 1", "Error!");
                return;
            }

            //Validation check if the user has selected any one of the options or not for Ques 2.
            if (!(rdbQ2Opt1.Checked || rdbQ2Opt2.Checked || rdbQ2Opt3.Checked || rdbQ2Opt4.Checked))
            {
                MessageBox.Show("Please select answer for Question 2", "Error!");
                return;
            }

            //Validation check if the user has selected any one of the options or not for Ques 3.
            if (!(rdbQ3Opt1.Checked || rdbQ3Opt2.Checked || rdbQ3Opt3.Checked || rdbQ3Opt4.Checked))
            {
                MessageBox.Show("Please select answer for Question 3", "Error!");
                return;
            }

            //Get the answers/options selected by the user for all the questions 
            ans1 = gboxQues1.Controls.OfType<RadioButton>().First(r => r.Checked).Text;
            ans2 = gboxQues2.Controls.OfType<RadioButton>().First(r => r.Checked).Text;
            ans3 = gboxQues3.Controls.OfType<RadioButton>().First(r => r.Checked).Text;

            //Check if any one of the answer is selected wrong. If any ques is wrong then restart the quiz else return to game
            if (quesList[values[0]].answer != ans1 || quesList[values[1]].answer != ans2 || quesList[values[2]].answer != ans3)
            {
                MessageBox.Show("Incorrect answer provided. Please retry!", "Message!");
                reloadQuiz();
            }
            else
            {
                //Set the Dialog Result to OK in order to continue the game on the Game Page Form1
                MessageBox.Show("All answers are correct. The game will now begin.", "Bingo!");
                this.DialogResult = DialogResult.OK;
                this.Close();
            }
        }

        void fillQuestionsOnForm()
        {
            //Gets the unique random number and store them in variable array "values" to laod the questions
            var rng = new Random();
            values = Enumerable.Range(0, quesList.Count).OrderBy(x => rng.Next()).ToArray();

            //Set the question, option text on the page from the organised ques list (quesList) with random ques numbers
            gboxQues1.Text = "Q1: " + quesList[values[0]].question;
            rdbQ1Opt1.Text = quesList[values[0]].option1;
            rdbQ1Opt2.Text = quesList[values[0]].option2;
            rdbQ1Opt3.Text = quesList[values[0]].option3;
            rdbQ1Opt4.Text = quesList[values[0]].option4;

            gboxQues2.Text = "Q2: " + quesList[values[1]].question;
            rdbQ2Opt1.Text = quesList[values[1]].option1;
            rdbQ2Opt2.Text = quesList[values[1]].option2;
            rdbQ2Opt3.Text = quesList[values[1]].option3;
            rdbQ2Opt4.Text = quesList[values[1]].option4;

            gboxQues3.Text = "Q3: " + quesList[values[2]].question;
            rdbQ3Opt1.Text = quesList[values[2]].option1;
            rdbQ3Opt2.Text = quesList[values[2]].option2;
            rdbQ3Opt3.Text = quesList[values[2]].option3;
            rdbQ3Opt4.Text = quesList[values[2]].option4;
        }

        void loadQuestions()
        {
            //Temporary variable to be used to set the ques, answer, options
            quizQuestions tempQuestion;

            //Temporary variable initialised and set with the actual questions, options, answer
            tempQuestion = new quizQuestions();
            tempQuestion.question = "Why do businesses use market research?";
            tempQuestion.option1 = "To identify customer needs";
            tempQuestion.option2 = "To sell goods and services";
            tempQuestion.option3 = "To advertise";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "To identify customer needs";
            quesList.Add(tempQuestion);                 //Temp question added to the organised list (quesList)

            tempQuestion = new quizQuestions();
            tempQuestion.question = "What is the first step for a new business?";
            tempQuestion.option1 = "To attract repeat purchases";
            tempQuestion.option2 = "To attract trial purchases";
            tempQuestion.option3 = "To attract advertising";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "To attract trial purchases";
            quesList.Add(tempQuestion);

            tempQuestion = new quizQuestions();
            tempQuestion.question = "What does desk research involve?";
            tempQuestion.option1 = "Gathering new data";
            tempQuestion.option2 = "Gathering existing data";
            tempQuestion.option3 = "Conducting surveys";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "Gathering new data";
            quesList.Add(tempQuestion);

            tempQuestion = new quizQuestions();
            tempQuestion.question = "What is information collected about opinions and views called?";
            tempQuestion.option1 = "Quantitative data";
            tempQuestion.option2 = "Qualitative data";
            tempQuestion.option3 = "Segmentation";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "Quantitative data";
            quesList.Add(tempQuestion);

            tempQuestion = new quizQuestions();
            tempQuestion.question = "How does accurate market research help a business?";
            tempQuestion.option1 = "By avoiding risk";
            tempQuestion.option2 = "By reducing risk";
            tempQuestion.option3 = "By eliminating risk";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "By reducing risk";
            quesList.Add(tempQuestion);

            tempQuestion = new quizQuestions();
            tempQuestion.question = "What does a market segment identify?";
            tempQuestion.option1 = "All the products in the market";
            tempQuestion.option2 = "Competitors";
            tempQuestion.option3 = "Groups of people with similar buying habits";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "Groups of people with similar buying habits";
            quesList.Add(tempQuestion);

            tempQuestion = new quizQuestions();
            tempQuestion.question = "What can a market map be used to identify?";
            tempQuestion.option1 = "Gaps in the market";
            tempQuestion.option2 = "Competitors";
            tempQuestion.option3 = "Groups of people with similar buying habits";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "Gaps in the market";
            quesList.Add(tempQuestion);

            tempQuestion = new quizQuestions();
            tempQuestion.question = "What is the name of an individual who is asked questions in a survey?";
            tempQuestion.option1 = "A supplier";
            tempQuestion.option2 = "A sample";
            tempQuestion.option3 = "A respondent";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "A respondent";
            quesList.Add(tempQuestion);

            tempQuestion = new quizQuestions();
            tempQuestion.question = "What are the total number of people selected to answer market research questions called?";
            tempQuestion.option1 = "A supplier";
            tempQuestion.option2 = "A sample";
            tempQuestion.option3 = "A respondent";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "A supplier";
            quesList.Add(tempQuestion);

            tempQuestion = new quizQuestions();
            tempQuestion.question = "Which of the following is an example of primary research?";
            tempQuestion.option1 = "Internet research";
            tempQuestion.option2 = "A focus group";
            tempQuestion.option3 = "Company reports";
            tempQuestion.option4 = "None of these";
            tempQuestion.answer = "A focus group";
            quesList.Add(tempQuestion);   

            //More questions can be added in the similar way by just creating duplicates of above paragraph
        }
    }

    //Class created to store the question, options and answers
    public class quizQuestions
    {
        public string question;
        public string option1, option2, option3, option4;
        public string answer;
    }
}


