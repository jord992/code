        public void Update_HighScores()
        {
            // creates a variabe called path that contains the location of the textfile
            string path = (Environment.GetFolderPath(Environment.SpecialFolder.MyDocuments) + "/HighScores.txt");
            if (File.Exists(path))
            {
                string Line2;
                StreamReader file = null;
                file = new StreamReader(path);
                string[] HighScores = new string[1000];
                int i = 0;
                while ((Line2 = file.ReadLine()) != null)
                {
                    HighScores[i] = Line2;
                    i++;
                }
                Array.Sort(HighScores);
                for (int j = 0; j <= 999; j++)
                {
                    if (HighScores[j] != null)
                    {
                        txtHighScores.Text = HighScores[j] + Environment.NewLine + txtHighScores.Text;

                        file.Dispose();
                    }
                }
            }

        }

